extends layout
block content
  .container-fulid
    .col-sm-10.col-md-10
      .panel.panel-default
        .panel-heading
          .row
            .pull-right(style="margin-right: 10px;")
              h3#h3.panel-title عرض #{title}
            .col-xs-6.col-md-6
              form.form#search_family(action="")
                .input-group
                  input.form-control(type='text',name="search_name" placeholder='بحث...برقم القيد')
                  .input-group-btn
                    button.btn.btn-default(type="submit")
                      i.glyphicon.glyphicon-search
            .pull-left(style="margin-left: 10px;")
              a.btn.btn-success(href='#add', role='button',data-toggle='modal')
                span.glyphicon.glyphicon-plus
                span.text-none  إضافة مولود جديد
        .table-responsive
          table.table.table-bordred.table-striped.table-condensed
            thead
              tr.info
                th.text-center الرقم الوطني
                th.text-center الاسم رباعي
                th.text-center تاريخ الميلاد
                th.text-center مكان الميلاد
                th.text-center صلة القرابة
                th.text-center الجنسية
                th.text-center تعديل
                th.text-center إلغاء
            tbody
              tr
                td.text-center الرقم الوطني
                td.text-center الاسم رباعي
                td.text-center تاريخ الميلاد
                td.text-center مكان الميلاد
                td.text-center صلة القرابة
                td.text-center الجنسية
                td.text-center
                  p(data-placement="top", data-toggle="tooltip", title="تعديل")
                    button.btn.btn-primary.btn-xs.edit_btn(data-toggle="modal", data-target="#edit")
                      span.glyphicon.glyphicon-edit
                td.text-center
                  p(data-placement="top", data-toggle="tooltip", title="إلغاء")
                    button.btn.btn-danger.btn-xs.delete_btn(data-toggle="modal", data-target="#delete")
                      span.glyphicon.glyphicon-trash
  #add.modal.fade(tabindex="-1", role="dialog", aria-labelledby="edit", aria-hidden="true")
    .modal-dialog.modal-lg
      .modal-content
        form.form#add_family_form(action="/family/new_family", method="post", accept-charset="utf-8", role="form")
          .modal-header
            button.close(type="button", data-dismiss="modal", aria-hidden="true")
              span.glyphicon.glyphicon-remove(aria-hidden="true")
            h4.modal-title.custom_align إضافة أسر ليبية جديدة
          .modal-body
            ul.nav.nav-tabs(role="tablist")
              li.active(role="presentation")
                a(href="#tabOne", aria-controls="tabOne", role="tab", data-toggle="tab") البيانات الشخصية
              li
                a(href="#tabTow", aria-controls="tabTow", role="tab", data-toggle="tab") بيانات الواقعة 
            .tab-content
              #tabOne.tab-pane.active(role="tabpanel")
                br
                .row
                  .col-md-3
                    .form-group
                      label اسم المولود
                      input.form-control(type="text", name="", placeholder="اسم المولود")
                  .col-md-3
                    .form-group
                      label جنس المولود
                      input.form-control(type="text", name="", placeholder="جنس المولود")
                  .col-md-3
                    .form-group
                      label تاريخ الميلاد
                      input.form-control(type="text", name="", placeholder="تاريخ الميلاد")
                  .col-md-3
                    .form-group
                      label مكان الميلاد
                      input.form-control(type="text", name="", placeholder="مكان الميلاد")
                .row
                  .col-md-3
                    .form-group
                      label بلد الميلاد
                      input.form-control(type="text", name="", placeholder="بلد الميلاد")
                  .col-md-3
                    .form-group
                      label مدينة الميلاد
                      input.form-control(type="text", name="", placeholder="مدينة الميلاد")
                  .col-md-3
                    .form-group
                      label اسم اﻷم
                      input.form-control(type="text", name="", placeholder="اسم اﻷم")
                  .col-md-3
                    .form-group
                      label تاريخ اﻹكتيتاب
                      input.form-control(type="text", name="", placeholder="تاريخ اﻹكتيتاب")
              #tabTow.tab-pane(role="tabpanel")
                br
                .row
                  .col-md-3
                    .form-group
                      label نوع الولادة
                      input.form-control(type="text", name="", placeholder="Select")
                  .col-md-3
                    .form-group
                      label عدد الاولاد
                      input.form-control(type="text", name="", placeholder="عدد الاولاد")
                  .col-md-3
                    .form-group
                      label نوع الموبلغ
                      input.form-control(type="text", name="", placeholder="Select")
                  .col-md-3
                    .form-group
                      label اسم المبلغ
                      input.form-control(type="text", name="", placeholder="اسم المبلغ")
                .row
                  .col-md-3
                    .form-group
                      label عنوان المبلغ
                      input.form-control(type="text", name="", placeholder="عنوان المبلغ")
                  .col-md-3
                    .form-group
                      label رقم السجل
                      input.form-control(type="text", name="", placeholder="رقم السجل")
                  .col-md-3
                    .form-group
                      label رقم ورقة السجل
                      input.form-control(type="text", name="", placeholder="رقم ورقة السجل")
                  .col-md-3
                    .form-group
                      label مكان الواقعة
                      input.form-control(type="text", name="", placeholder="Select")
                .row
                  .col-md-3
                    .form-group
                      label كيفية الولادة
                      input.form-control(type="text", name="", placeholder="Select")
                  .col-md-3
                    .form-group
                      label نوع التبليغ
                      input.form-control(type="text", name="", placeholder="Select")
                  .col-md-3
                    .form-group
                      label حالة المولود
                      input.form-control(type="text", name="", placeholder="Select")
                  .col-md-3
                    .form-group
                      label فيصيلة الدم
                      input.form-control(type="text", name="", placeholder="Select")
                .row
                  .col-md-3
                    .form-group
                      label حالة الولادة
                      input.form-control(type="text", name="", placeholder="Select")
                  .col-md-3
                    .form-group
                      label حالة المولود الصحية
                      input.form-control(type="text", name="", placeholder="Select")
                  .col-md-3
                    .form-group
                      label مدة الحمل
                      input.form-control(type="text", name="", placeholder="Select")
                  .col-md-3
                    .form-group
                      label وزن المولود بالكيلو جرام
                      input.form-control(type="text", name="", placeholder="Select")
          .modal-footer
            button.btn.btn-success.btn-lg(type="submit", style="width: 100%;")
              span.glyphicon.glyphicon-plus
              |  إضافة
  #edit.modal.fade(tabindex="-1", role="dialog", aria-labelledby="edit", aria-hidden="true")
    .modal-dialog
      .modal-content
        form.form#edit_family_form(action="/family/edit_family", method="post", accept-charset="utf-8", role="form")
          .modal-header
            button.close(type="button", data-dismiss="modal", aria-hidden="true")
              span.glyphicon.glyphicon-remove(aria-hidden="true")
            h4.modal-title.custom_align تعديل بيانات الأسرة
          .modal-body
            .row
          .modal-footer
            button#edit_family_btn.btn.btn-info.btn-lg(type="submit", style="width: 100%;")
              span.glyphicon.glyphicon-ok-sign
              |  تعديل
  #delete.modal.fade(tabindex="-1", role="dialog", aria-labelledby="edit", aria-hidden="true")
    .modal-dialog
      .modal-content
        form.form#delete_family_form(action="/family/delete_family", method="post", accept-charset="utf-8", role="form")
          .modal-header
            button.close(type="button", data-dismiss="modal", aria-hidden="true")
              span.glyphicon.glyphicon-remove(aria-hidden="true")
            h4.modal-title.custom_align إلغاء أسرة معين
          .modal-body
            .alert.alert-danger.h5
              //- get hidden ID has family_id_delete
              input#family_id_delete.form-control(type="hidden", name="id")               
              span.glyphicon.glyphicon-warning-sign
              |  هل تريد فعلا الغاء هذه الأسرة ؟
          .modal-footer
            button#yesBtn.btn.btn-success(type="submit")
              span.glyphicon.glyphicon-ok-sign
              |  نعم
            button.btn.btn-default(type="button", data-dismiss="modal")
              span.glyphicon.glyphicon-remove
              |  لا
  script(src='/js/jquery-2.1.1.min.js')
  script(src='/js/bootstrap.min.js')
  script(src='/js/bootstrap-select.min.js')
  script(src='/js/jquery.validate.min.js')
  script(src='/js/bootstrap-notify.min.js')
  script(src='/js/moment-with-locales.min.js')
  script(src='/js/bootstrap-datetimepicker.min.js')
  script(src='/js/bootstrap-switch.min.js')
  script(src='/js/helpers.js')
  script(src='/js/birth.js')
  script.
    $('#edit_family_record_date').datetimepicker({
      useCurrent: false,
      viewMode: 'years',
      format: 'YYYY-MM-DD',
      locale: 'ar-sa'
    });
    $("[data-toggle=tooltip]").tooltip();
