extends layout

block content
  .container-fulid
    .col-sm-10.col-md-10
      .panel.panel-default
        .panel-heading
          .row
            .pull-right(style="margin-right: 10px;")
              h3#h3.panel-title عرض #{title}
            .col-xs-6.col-md-6
              form.form#search_personal(action="")  
                .input-group
                  input.form-control(type='text',name="search_name" placeholder='بحث...')
                  .input-group-btn
                    button.btn.btn-default(type="submit")
                      i.glyphicon.glyphicon-search
            .pull-left(style="margin-left: 10px;")
              a.btn.btn-success(href='#add', role='button',data-toggle='modal')
                span.glyphicon.glyphicon-plus
                span.text-none  إضافة أفراد الأسرة
        .table-responsive
          table.table.table-bordred.table-striped.table-condensed
            thead
              tr.info
                th.text-center الاسم
                th.text-center الأب
                th.text-center الجد
                th.text-center اللقب
                th.text-center أسم الأم
                th.text-center تاريخ الميلاد
                th.text-center مكان الميلاد
                th.text-center الجنسية
                th.text-center صلة القرابة
                th.text-center الرقم الوطني
                th.text-center تعديل
                th.text-center إلغاء
            tbody
            for personal in personals
              tr(id="br-#{personal.Personal.id}", data-Arabic_Firstname="#{personal.Personal.Arabic_Firstname}",data-Arabic_Fathername="#{personal.Personal.Arabic_Fathername}",data-Arabic_Grandfathername="#{personal.Personal.Arabic_Grandfathername}",data-Arabic_Familyname="#{personal.Personal.Arabic_Familyname}",data-Arabic_Motherfirstname="#{personal.Personal.Arabic_Motherfirstname}",data-Birth_Date="#{personal.Personal.Birth_Date}",data-Birth_Place="#{personal.Personal.Birth_Place}")  
                 //- Personal هو الاوبجكت اللي فيه البيانات المطلوبة
                td.text-center #{personal.Personal.Arabic_Firstname}
                td.text-center #{personal.Personal.Arabic_Fathername}
                td.text-center #{personal.Personal.Arabic_Grandfathername}
                td.text-center #{personal.Personal.Arabic_Familyname}
                td.text-center #{personal.Personal.Arabic_Motherfirstname}
                td.text-center #{personal.Personal.Birth_Date.getDate()} / #{personal.Personal.Birth_Date.getMonth()+1} / #{personal.Personal.Birth_Date.getFullYear()}
                td.text-center #{personal.Personal.Birth_Place}
                td.text-center 
                  if personal.Personal.Gender==1
                    span #{personal.Personal.Nationality.nationality_male}
                  else
                    span #{personal.Personal.Nationality.nationality_female}
                td.text-center #{personal.Kinship.kinship_name}
                td.text-center #{personal.Personal.national_id}
                td.text-center
                  p(data-placement="top", data-toggle="tooltip", title="تعديل")
                    button.btn.btn-primary.btn-xs.edit_btn(data-title="Edit", data-toggle="modal", data-target="#edit", value="#{personal.Personal.id}")
                      span.glyphicon.glyphicon-pencil
                td.text-center
                  p(data-placement="top", data-toggle="tooltip", title="إلغاء")
                    button.btn.btn-danger.btn-xs.delete_btn(data-title="Delete", data-toggle="modal", data-target="#delete", value="#{personal.Personal.id}")
                      span.glyphicon.glyphicon-trash
  #add.modal.fade(tabindex="-1", role="dialog", aria-labelledby="add", aria-hidden="true")
    .modal-dialog.modal-lg
      .modal-content
        form.form#add_personal_form(action="/personal/new_personal", method="post", accept-charset="utf-8", role="form")
          .modal-header
            button.close(type="button", data-dismiss="modal", aria-hidden="true")
              span.glyphicon.glyphicon-remove(aria-hidden="true")
            h4.modal-title.custom_align إضافة فرد جديد لأسرة
          .modal-body
            .form-group
              .row
                .col-xs-4.col-md-4
                  label الاسم
                  input#personal_firstname.form-control(type="text", name="Arabic_Firstname", placeholder="الاسم الأول")
                .col-xs-4.col-md-4
                  label الاب
                  input#personal_fathername.form-control(type="text", name="Arabic_Fathername", placeholder="اسم الاب")
                .col-xs-4.col-md-4
                  label الجد
                  input#personal_grandfathername.form-control(type="text", name="Arabic_Grandfathername", placeholder="اسم الجد")
            .form-group
              .row
                .col-xs-4.col-md-4
                  label اللقب
                  input#personal_familyname.form-control(type="text", name="Arabic_Familyname", placeholder="لقب العائلة")
                .col-xs-4.col-md-4
                  label اسم الأم الأول
                  input#personal_motherfirstname.form-control(type="text", name="Arabic_Motherfirstname", placeholder="اسم الأم ")
                .col-xs-4.col-md-4
                  label اسم أب الأم
                  input#personal_motherfathername.form-control(type="text", name="Arabic_Motherfathername", placeholder="اسم  والد الأم ")
            .form-group
              .row
                .col-xs-4.col-md-4
                  label اسم جد الأم
                  input#personal_mothergrandfathername.form-control(type="text", name="Arabic_Mothergrandfathername", placeholder="جد الأم ")
                .col-xs-4.col-md-4
                  label لقب الأم
                  input#personal_motherfamilyname.form-control(type="text", name="Arabic_Motherfamilyname", placeholder="لقب الأم ")
                .col-xs-4.col-md-4
                  label تاريخ الميلاد
                  input#personal_Birth_Date.form-control(type="text", name="Birth_Date", placeholder="تاريخ الميلاد")
            .form-group
              .row
                .col-xs-4.col-md-4
                  label  اختر دولة الميلاد
                  select.form-control.selectpicker(name="country.id", data-live-search="true", data-size=5)
                    option(value="", style='color:grey; display:none;') اختر دولة الميلاد...
                    //- for country in countries
                    //-   option(value="#{country.id}") #{country.country_name}
                .col-xs-4.col-md-4
                  label محل الميلاد   
                  input#personal_birth_Place.form-control(type="text", name="Birth_Place", placeholder="محل الميلاد")
                .col-xs-4.col-md-4
                  label مدينة الميلاد
                  input#personal_Birth_Date.form-control(type="text", name="Birth_Date", placeholder="تاريخ الميلاد")

            .form-group
              .row
                .col-xs-4.col-md-4
                  label مكان الميلاد
                  input#personal_motherfamilyname.form-control(type="text", name="Arabic_Motherfamilyname", placeholder="مكان الميلاد")
                .col-xs-4.col-md-4
                  label فففف
                  input#latitude.form-control(type="text", name="latitude", placeholder="خط العرض")
                .col-xs-4.col-md-4
                  label صصصص
                  input#longitude.form-control(type="text", name="longitude", placeholder="خط الطول")                                        
            .form-group
              .row
                .col-xs-4.col-md-4
                  label  اختر الجنس
                  select.form-control.selectpicker(name="country.id", data-live-search="true", data-size=5)
                    option(value="", style='color:grey; display:none;') اختر دولة الميلاد...
                .col-xs-4.col-md-4
                  label خط 444
                  input#latitude.form-control(type="text", name="latitude", placeholder="خط العرض")
                .col-xs-4.col-md-4
                  label خط 3333
                  input#longitude.form-control(type="text", name="longitude", placeholder="خط الطول")                                        
          
          .modal-footer
            button#add_office_btn.btn.btn-warning.btn-lg(type="submit", style="width: 100%;")
              span.glyphicon.glyphicon-ok-sign
              |  إضافة


      
  script(src='/js/jquery-2.1.1.min.js')
  script(src='/js/bootstrap.min.js')
  script(src='/js/jquery.validate.min.js')
  script(src='/js/bootstrap-notify.min.js')
  script(src='/js/bootstrap-select.min.js')
  script(src='/js/helpers.js')
